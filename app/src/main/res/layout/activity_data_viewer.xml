<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataViewerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Table"
            android:textSize="20dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:textColor="@color/black" >
        </TextView>



        <TableRow android:background="#C8BDBD"
            android:padding="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="NO."
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="NAME"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Mobile No." />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Email" />
        </TableRow>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            tools:itemCount="15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:saveEnabled="true"
            android:text="Save"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table 1"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:textColor="@color/black" >
        </TextView>
        <TableRow android:background="#C8BDBD"
            android:padding="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="SRNO."
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Date"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Party Name" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Ref No." />
        </TableRow>

        <TableRow
            android:background="#ACA9A9"
            android:padding="10dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="S0001" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="11-11-2022" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Raj" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="ABCR" />

        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table 2"
            android:textSize="20dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:textColor="@color/black" >
        </TextView>
        <TableRow android:background="#C8BDBD"
            android:padding="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="SRNO."
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Date"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="IDNO" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="NAME" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="GENDER" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="AGE" />
        </TableRow>

        <TableRow
            android:background="#ACA9A9"
            android:padding="10dp"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="S0001" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="11-11-2022" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="1111" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Raj" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="Male" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:text="22" />

        </TableRow>


    </TableLayout>
    </RelativeLayout>


</ScrollView>